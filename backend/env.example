# ===========================================
# RAMA CHAT APP - ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and update the values

# ===========================================
# APPLICATION SETTINGS
# ===========================================
NODE_ENV=development
PORT=5000
HOST=0.0.0.0

# ===========================================
# API CONFIGURATION
# ===========================================
API_URL=http://localhost:5000
FRONTEND_URL=http://localhost:5173

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# MongoDB Connection String (use this OR individual components below)
MONGO_URI=mongodb://localhost:27017/rama-chat-app

# Alternative: Individual MongoDB components
# MONGO_HOST=localhost
# MONGO_PORT=27017
# MONGO_DB_NAME=rama-chat-app
# MONGO_USERNAME=
# MONGO_PASSWORD=

# MongoDB Connection Options
MONGO_SERVER_SELECTION_TIMEOUT=30000
MONGO_SOCKET_TIMEOUT=45000
MONGO_MAX_POOL_SIZE=10
MONGO_MIN_POOL_SIZE=1
MONGO_MAX_IDLE_TIME=30000

# MongoDB SSL (for cloud databases like MongoDB Atlas)
MONGO_SSL=false
MONGO_SSL_VALIDATE=true

# ===========================================
# JWT CONFIGURATION
# ===========================================
JWT_SECRET=your_super_secure_jwt_secret_key_here_change_this_in_production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# CORS CONFIGURATION
# ===========================================
# Comma-separated list of allowed origins
CORS_ORIGINS=https://rama.ciphra.in,http://localhost:5173
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# ===========================================
# SOCKET.IO CONFIGURATION
# ===========================================
# Socket.io CORS (can be different from main CORS)
SOCKET_CORS_ORIGINS=https://rama.ciphra.in,http://localhost:5173
SOCKET_CORS_CREDENTIALS=true
SOCKET_CORS_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS

# Socket.io Transport and Connection Settings
SOCKET_TRANSPORTS=polling,websocket
SOCKET_ALLOW_EIO3=true
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000
SOCKET_MAX_HTTP_BUFFER_SIZE=1000000

# ===========================================
# REDIS CONFIGURATION (Optional)
# ===========================================
USE_REDIS=false
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================
FILE_BASE_URL=http://localhost:5000
UPLOAD_PATH=/uploads/chat-files
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpeg,jpg,png,gif,pdf,doc,docx,txt,mp4,avi,mkv

# ===========================================
# EMAIL CONFIGURATION (Optional)
# ===========================================
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@rama-chat.com

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# ===========================================
# MONITORING CONFIGURATION (Optional)
# ===========================================
ENABLE_METRICS=false
METRICS_PORT=9090

# ===========================================
# PRODUCTION SPECIFIC SETTINGS
# ===========================================
# Uncomment and configure for production
# NODE_ENV=production
# API_URL=https://chat.api.d0s369.co.in
# FRONTEND_URL=https://rama.ciphra.in
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/rama-chat-app
# JWT_SECRET=your_production_jwt_secret_here
# USE_REDIS=true
# REDIS_URL=redis://your-redis-host:6379
